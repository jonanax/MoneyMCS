@page "{id}"
@model EditProfileModel
@{
    Layout = "_AdminLayout";
    ViewData["pageName"] = "Agents";
    ViewData["Title"] = "Edit agent";
}
<main class="w-full flex-grow p-6">
    <div class="w-full mt-12">
        <p class="text-xl pb-3 flex items-center">
            <i class="fas fa-user-edit"></i> Edit Agent Info
        </p>
        <!--Contents Here-->
        <p class="text-gray-500">Account Name: Scott, Lang</p>
        <div class="w-full mt-6" x-data="{ openTab: 1 }">
            <div>
                <ul class="flex border-b">
                    <li class="-mb-px mr-1">
                        <a asp-page="/Member/Agents/EditProfile" asp-route-id="@Model.ToEditAgent.Id"
                            class="border-l border-t border-r rounded-t text-blue-700 font-semibold bg-white inline-block py-2 px-4 font-semibold">Profile</a>
                    </li>
                    <li class="-mb-px mr-1">
                        <a asp-page="/Member/Agents/EditAgent" asp-route-id="@Model.ToEditAgent.Id"
                            class="text-blue-500 hover:text-blue-800 bg-white inline-block py-2 px-4 font-semibold">Agent Info</a>
                    </li>
                    <li class="-mb-px mr-1">
                        <a asp-page="/Member/Agents/EditPassword" asp-route-id="@Model.ToEditAgent.Id"
                            class="text-blue-500 hover:text-blue-800 bg-white inline-block py-2 px-4 font-semibold">Reset Password</a>
                    </li>

                    
               
                </ul>
            </div>
            <div class="bg-gray-200 shadow-md p-6">
                <div class="grid grid-cols-1 md:grid-cols-3 my-2 gap-4" x-show="openTab === 1">
                    <form method="post">
                        <div asp-validation-summary="All" style="color: red"></div>
                        <input type="hidden" name="Id" value="@Model.ToEditAgent.Id" />
                        <div class="flex justify-between my-1">
                            <label class="text-gray-700" for="cus_name">Username:</label>
                            <input  class="px-3 py-1 text-gray-900" name="Username" type="text" 
                                aria-label="Name" value="@Model.ToEditAgent.UserName"  />
                        </div>
                        <div class="flex justify-between my-1">
                            <label class="text-gray-700" for="cus_name">First Name:</label>
                            <input class="px-3 py-1 text-gray-900" name="FirstName" type="text" required=""
                                aria-label="Name" value="@Model.ToEditAgent.FirstName" />
                        </div>
                        <div class="flex justify-between my-1">
                            <label class="text-gray-700" for="cus_name">Last Name:</label>
                            <input class="px-3 py-1 text-gray-900" name="LastName" type="text"
                                value="@Model.ToEditAgent.LastName" />
                        </div>
                        <div class="flex justify-between my-1">
                            <label class="text-gray-700" for="cus_name">Phone:</label>
                            <input class="px-3 py-1 text-gray-900"  name="PhoneNumber" type="text" value="@Model.ToEditAgent.PhoneNumber"
                                  />
                        </div>
                        <div class="flex justify-between my-1">
                            <label class="text-gray-700" for="cus_name">Email:</label>
                            <input class="px-3 py-1 text-gray-900" name="Email" type="email" required="" value="@Model.ToEditAgent.Email"/>
                        </div>
                        <div class="flex justify-end mt-5">
                            <a asp-page="/Member/Agents/Index"
                                class="bg-green-500 hover:bg-green-600 rounded-md px-2 py-1 text-sm mr-1">
                                <i class="fas fa-save"></i> Save
                            </a>
                            <button type="button"
                                class="bg-gray-400 hover:bg-gray-500 rounded-md px-2 py-1 text-sm mr-1">
                                <i class="fas fa-times-circle"></i> Cancel
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>
