@page "{id}"
@model EditModel
@{
    Layout = "_AdminLayout";
    ViewData["pageName"] = "Accounts";
    ViewData["Title"] = "Edit account";
}

<main class="w-full flex-grow p-6">
    <div class="w-full mt-12">
        <p class="text-xl pb-3 flex items-center">
            <i class="fas fa-user-edit"></i> Edit Account Info
        </p>
        <!--Contents Here-->
        <p class="text-gray-500">Account Name: Scott, Lang</p>
        <div class="w-full mt-6" x-data="{ openTab: 1 }">
            <div>
                <ul class="flex border-b">
                    <li class="-mb-px mr-1" @@click="openTab = 1">
                        <a :class="openTab === 1 ? 'border-l border-t border-r rounded-t text-blue-700 font-semibold' : 'text-blue-500 hover:text-blue-800'"
                            class="bg-white inline-block py-2 px-4 font-semibold" href="#">User Account Info</a>
                    </li>
       
                    <li class="mr-1" @@click="openTab = 2">
                        <a :class="openTab === 3 ? 'border-l border-t border-r rounded-t text-blue-700 font-semibold' : 'text-blue-500 hover:text-blue-800'"
                            class="bg-white inline-block py-2 px-4 font-semibold" href="#">Reset Password</a>
                    </li>
                </ul>
            </div>
            <div class="bg-gray-200 shadow-md p-6">
                <div id="" class="grid grid-cols-1 md:grid-cols-3 my-2 gap-4" x-show="openTab === 1">
                    <form method="post">
                        <div class="flex justify-between my-1">
                            <label asp-for="Input.UserName" class="text-gray-700" for="cus_name"></label>
                            <input asp-for="Input.UserName" class="px-3 py-1 text-gray-900"
                                 value="@Model.ToEditAccount.UserName" />
                        </div>
                        <div class="flex justify-between my-1">
                            <label asp-for="Input.FirstName" class="text-gray-700" for="cus_name">First Name:</label>
                            <input asp-for="Input.FirstName" class="px-3 py-1 text-gray-900" 
                                 value="@Model.ToEditAccount.FirstName" />
                        </div>
                        <div class="flex justify-between my-1">
                            <label asp-for="Input.LastName" class="text-gray-700" for="cus_name"></label>
                            <input asp-for="Input.LastName" class="px-3 py-1 text-gray-900"
                                value="@Model.ToEditAccount.LastName" />
                        </div>
                        <div class="flex justify-between my-1">
                            <label asp-for="Input.Email" class="text-gray-700" for="cus_name"></label>
                            <input asp-for="Input.Email" class="px-3 py-1 text-gray-900"
                                   value="@Model.ToEditAccount.Email" />
                        </div>
                        <div class="flex justify-between my-1">
                            <label asp-for="Input.PhoneNumber" class="text-gray-700" for="cus_name"></label>
                            <input asp-for="Input.PhoneNumber" class="px-3 py-1 text-gray-900"
                                   value="@Model.ToEditAccount.PhoneNumber" />
                        </div>
                        <div class="flex justify-end mt-5">
                            <button type="submit"
                                class="bg-green-500 hover:bg-green-600 rounded-md px-2 py-1 text-sm mr-1">
                                <i class="fas fa-save"></i> Save
                            </button>
                            <a asp-page="/Member/Accounts/Index"
                                class="bg-gray-400 hover:bg-gray-500 rounded-md px-2 py-1 text-sm mr-1">
                                <i class="fas fa-times-circle"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
                
                <div class="grid grid-cols-1 md:grid-cols-3 my-2 gap-4" x-show="openTab === 2">
                    <form>
                        <div class="flex justify-between my-1">
                            <label class="text-gray-700" for="cus_name">Username:</label>
                            <input class="px-3 py-1 text-gray-900 bg-gray-300" type="text"
                                value="@Model.ToEditAccount.UserName" disabled />
                        </div>
                        <div class="flex justify-between my-1">
                            <label class="text-gray-700" for="cus_name">Password:</label>
                            <input class="px-3 py-1 text-gray-900" id="cus_name" name="cus_name" type="text" required=""
                                aria-label="Name" value="+63 2312312" />
                        </div>
                        <div class="flex justify-between my-1">
                            <label class="text-gray-700" for="cus_name">Confirm Password:</label>
                            <input class="px-3 py-1 text-gray-900" id="cus_name" name="cus_name" type="text" required=""
                                aria-label="Name" value="scottlang@gmail.com" />
                        </div>
                        <div class="flex justify-end mt-5">
                            <button type="button"
                                class="bg-green-500 hover:bg-green-600 rounded-md px-2 py-1 text-sm mr-1">
                                <i class="fas fa-save"></i> Save
                            </button>
                            <button type="button"
                                class="bg-gray-400 hover:bg-gray-500 rounded-md px-2 py-1 text-sm mr-1">
                                <i class="fas fa-times-circle"></i> Cancel
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>
