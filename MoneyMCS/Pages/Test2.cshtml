@page
@model MoneyMCS.Pages.Test2Model
@{
    Layout = "_Layout";
}

<style>

  form > div:first-of-type > div:first-of-type > div {
    position: relative
  }
  form > div:first-of-type > div:first-of-type > div > span {
    position: absolute;
    bottom: 90%
  }
</style>
<div
  class="min-h-full flex items-center justify-center py-8 px-4 sm:px-6 lg:px-8"
>
  <div class="max-w-md w-full space-y-8">
    <div>
      <img
        class="mx-auto h-44 w-auto"
        src="~/img/logolarge.png"
        alt="Workflow"
      />
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
        Become an agent now!
      </h2>
      <p class="mt-2 text-center text-sm text-gray-600">
        Or
        <a href="{% url 'account:login' %}" class="font-medium text-green-600 hover:text-indigo-500">
          Sign in
        </a>
      </p>
    </div>


    
    <form
      action="{% url 'account:signup' %}"
      class="mt-8 space-y-6"
      method="POST"
    >

      <input type="hidden" name="remember" value="true" />
      <div class="rounded-md shadow-sm -space-y-px">
        <div class="grid sm:grid-cols-1 md:grid-cols-2 gap-2">
          <div class="py-2 col-span-2 md:col-span-1">
            <label for="username" class="sr-only">Username</label>
            <span class="text-xs text-red-600"></span>
            <input
              id="username"
              name="username"
              type="text"
              value=""
              class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
              placeholder="Username"
            />
          </div>
          <div class="py-2 col-span-2 md:col-span-1 hidden md:block"></div>
          <div class="py-2 col-span-2 md:col-span-1">
            <label for="first_name" class="sr-only">First name</label>
            <span class="text-xs text-red-600"></span>
            <input
              id="first_name"
              name="first_name"
              type="text"
              value=""
              class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
              placeholder="First name"
            />
          </div>
          <div class="py-2 col-span-2 md:col-span-1">
            <label for="last_name" class="sr-only">Last name</label>
            <span class="text-xs text-red-600"></span>
            <input
              id="last_name"
              name="last_name"
              type="text"
              value=""
              class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
              placeholder="Last name"
            />
          </div>
          <div class="py-2 col-span-2 md:col-span-1">
            <label for="email" class="sr-only">Email</label>
            <span class="text-xs text-red-600 absolute"></span>
            <input
              id="email"
              name="email"
              type="email"
              value=""
              class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
              placeholder="Email"
            />
          </div>
         
          <div class="py-2 col-span-2 md:col-span-1">
            <label for="password" class="sr-only">Password</label>
            <span class="text-xs text-red-600"></span>
            <input
              id="password1"
              name="password1"
              type="password"
              class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
              placeholder="Password"
            />
          </div>
          <div class="py-2 col-span-2 md:col-span-1">
            <label for="password" class="sr-only">Confirm password</label>
            <span class="text-xs text-red-600"></span>
            <input
              id="password2"
              name="password2"
              type="password"
              class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
              placeholder="Confirm password"
            />
          </div>
          <div class="py-2 col-span-2">
            <span class="text-xs text-red-600"></span>
            <input
              id="lagcheck"
              name="lag"
              type="checkbox"
            />
            <label for="password" class="text-slate-700">I agree to <a role="button" class="text-indigo-600 hover:text-indigo-500 modalbtn" data-modal-toggle="#lagModal">terms and conditions</a></label>

          </div>
          <div class="py-2 col-span-2" >
            <span class="text-xs text-red-600 absolute bottom-full"></span>
 
            </div>
          <div class="py-2 col-span-2">
            <button
              type="submit"
              class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-black bg-green-500 hover:bg-yellow-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
            >
              Create account
            </a>
          </div>

        </div>
        <div id="lagModal" tabindex="-1" aria-hidden="true" class="bg-slate-700/25 hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 w-full md:inset-0 h-modal md:h-full flex justify-center">
          <div class="relative p-4 w-full max-w-2xl h-full md:h-auto">
              <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
                  <div class="flex justify-between items-start p-5 rounded-t border-b dark:border-gray-600">
                      <h3 class="text-xl font-semibold text-gray-900 lg:text-2xl dark:text-white">
                          Terms of Service
                      </h3>
                      <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm p-1.5 ml-auto inline-flex items-center dark:hover:bg-gray-600 dark:hover:text-white modalbtn" data-modal-toggle="#lagModal">
                          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>  
                      </button>
                  </div>
                  <div class="p-6 space-y-6">
                      <p class="text-base leading-relaxed text-gray-500 dark:text-gray-400">
                          With less than a month to go before the European Union enacts new consumer privacy laws for its citizens, companies around the world are updating their terms of service agreements to comply.
                      </p>
                      <p class="text-base leading-relaxed text-gray-500 dark:text-gray-400">
                          The European Union’s General Data Protection Regulation (G.D.P.R.) goes into effect on May 25 and is meant to ensure a common set of data rights in the European Union. It requires organizations to notify users as soon as possible of high-risk data breaches that could personally affect them.
                      </p>
                  </div>
                  <div class="flex items-center p-6 space-x-2 rounded-b border-t border-gray-200 dark:border-gray-600">
                      <button id="lagacceptbtn" data-modal-toggle="#lagModal" type="button" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">I accept</button>
                      <button id="lagdeclinebtn" data-modal-toggle="#lagModal" type="button" class="text-gray-500 bg-white hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-blue-300 rounded-lg border border-gray-200 text-sm font-medium px-5 py-2.5 hover:text-gray-900 focus:z-10 dark:bg-gray-700 dark:text-gray-300 dark:border-gray-500 dark:hover:text-white dark:hover:bg-gray-600 dark:focus:ring-gray-600">Decline</button>
                  </div>
              </div>
          </div>
      </div>        
      </div>

      
    </form>
  </div>
</div>
<script>
        lagcheck = document.getElementById('lagcheck')
        lagacceptbtn = document.getElementById('lagacceptbtn')
        lagdeclinebtn = document.getElementById('lagdeclinebtn')

        lagacceptbtn.addEventListener('click', event => {
          modal_id = event.target.getAttribute('data-modal-toggle')
          modal = document.querySelector(modal_id)
          toggle(modal)
          lagcheck.checked = true

        })
        lagdeclinebtn.addEventListener('click', event => {
          modal_id = event.target.getAttribute('data-modal-toggle')
          modal = document.querySelector(modal_id)
          toggle(modal)
          lagcheck.checked = false
        })

</script>
{% endblock %}