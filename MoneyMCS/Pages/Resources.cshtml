@page
@model MoneyMCS.Pages.ResourcesModel
@{
    Layout = "_AdminLayout";
}


<main class="w-full flex-grow p-6">
    <div class="w-full mt-12">
        <p class="text-xl pb-3 flex items-center">
            <i class="fas fa-book mr-2"></i> Resources Library
        </p>
        <!--Contents Here-->
        <div>
            <div class="md:flex md:justify-center">
                <form class="w-full md:w-1/2">
                    <label for="default-search"
                        class="mb-2 text-sm font-medium text-gray-900 sr-only dark:text-gray-300">Search</label>
                    <div class="relative">
                        <div class="flex absolute inset-y-0 left-0 items-center pl-3 pointer-events-none">
                            <svg aria-hidden="true" class="w-5 h-5 text-gray-500 dark:text-gray-400" fill="none"
                                stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                            </svg>
                        </div>
                        <input type="search" id="default-search"
                            class="block p-4 pl-10 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                            placeholder="Search resources" required="" />
                        <button type="submit"
                            class="text-white absolute right-2.5 bottom-2.5 bg-green-600 hover:bg-green-700 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-2 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                            Search
                        </button>
                    </div>
                    <div class="mt-5 flex justify-center">
                        <div x-data="{show: false}">
                            <a href="#" x-on:click.prevent="show = !show"
                                class="relative z-10 border border-gray-600 rounded px-4 py-2 bg-white">
                                <span class="inline-block">Select category</span>
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                    stroke="currentColor"
                                    class="stroke-current inline-block w-4 h-4 transform transition duration-150"
                                    x-bind:class="{ 'rotate-180': show }">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M19 9l-7 7-7-7" />
                                </svg>
                            </a>
                            <div x-show.transition="show"
                                class="absolute z-20 mt-1 flex w-64 flex-col px-4 py-8 whitespace-nowrap border border-gray-600 rounded bg-white">
                                <div>
                                    <input type="checkbox" name="type[]" value="SalesResouces"
                                        class="inline-block mr-2" />Sales Resources
                                </div>
                                <div>
                                    <input type="checkbox" name="type[]" value="SalesResouces"
                                        class="inline-block mr-2" />Contracts and Agreements
                                </div>
                                <div>
                                    <input type="checkbox" name="type[]" value="SalesResouces"
                                        class="inline-block mr-2" />Finance Resources
                                </div>
                                <div>
                                    <input type="checkbox" name="type[]" value="SalesResouces"
                                        class="inline-block mr-2" />Marketing Emails
                                </div>
                                <div>
                                    <input type="checkbox" name="type[]" value="SalesResouces"
                                        class="inline-block mr-2" />Marketing Flyers
                                </div>
                                <div>
                                    <input type="checkbox" name="type[]" value="SalesResouces"
                                        class="inline-block mr-2" />Marketing Powerpoints
                                </div>
                                <div>
                                    <input type="checkbox" name="type[]" value="SalesResouces"
                                        class="inline-block mr-2" />Marketing Social Media
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="mt-5 p-5">
                <div class="flex justify-end my-3 md:my-2">
                    <a asp-page="AddAgent" role="button"
                        class="bg-gray-300 rounded-md hover:bg-gray-400 px-2 py-1 text-sm font-medium"><i
                            class="fas fa-book"></i> Add new resource</a>
                </div>
                <div class="lg:flex mb-4 m-10 rounded mx-auto">
                    <div class="w-full lg:w-1/3 rounded overflow-hidden shadow-lg m-5 relative flex flex-col">
                        <div class="py-2">
                            <img class="mx-auto"
                                src="https://suitelogin-production.s3.us-east-2.amazonaws.com/wp-content/uploads/2017/05/03205410/Finance-Commitment-Letter-180X180.jpg"
                                alt="Sunset in the mountains" />
                        </div>
                        <div class="text-center px-6 py-4 h-full">
                            <div class="font-bold text-xl mb-2">Sales Process</div>
                            <p class="text-gray-700 text-base">
                                Lorem ipsum dolor sit amet, consectetur adipisicing elit. Volup
                            </p>
                        </div>
                        <button
                            class="w-full bg-green-500 hover:bg-green-600 text-gray-800 font-bold py-2 px-4 rounded inline-flex justify-center items-center">
                            <i class="fas fa-eye mr-2"></i> View
                        </button>
                    </div>
                    <div class="w-full lg:w-1/3 rounded overflow-hidden shadow-lg m-5 relative flex flex-col">
                        <div class="py-2">
                            <img class="mx-auto"
                                src="https://suitelogin-production.s3.us-east-2.amazonaws.com/wp-content/uploads/2017/06/03205315/Sales-Scripts.jpg"
                                alt="Sunset in the mountains" />
                        </div>
                        <div class="text-center px-6 py-4 h-full">
                            <div class="font-bold text-xl mb-2">Sales Scripts</div>
                            <p class="text-gray-700 text-base">
                                Lorem ipsum dolor sit amet, consectetur adipisicing elit. Volup
                            </p>
                        </div>
                        <button
                            class="w-full bg-green-500 hover:bg-green-600 text-gray-800 font-bold py-2 px-4 rounded inline-flex justify-center items-center">
                            <i class="fas fa-eye mr-2"></i> View
                        </button>
                    </div>
                    <div class="w-full lg:w-1/3 rounded overflow-hidden shadow-lg m-5 relative flex flex-col">
                        <div class="py-2">
                            <img class="mx-auto"
                                src="https://suitelogin-production.s3.us-east-2.amazonaws.com/wp-content/uploads/2017/05/03205405/Sample-Contract-180X180.jpg"
                                alt="Sunset in the mountains" />
                        </div>
                        <div class="text-center px-6 py-4 h-full">
                            <div class="font-bold text-xl mb-2">Sample Contract</div>
                            <p class="text-gray-700 text-base">
                                Lorem ipsum dolor sit amet, consectetur adipisicing elit. Volup
                            </p>
                        </div>
                        <button
                            class="w-full bg-green-500 hover:bg-green-600 text-gray-800 font-bold py-2 px-4 rounded inline-flex justify-center items-center">
                            <i class="fas fa-eye mr-2"></i> View
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.x.x/dist/alpine.min.js" defer></script>
    <!-- Font Awesome -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/js/all.min.js" integrity="sha256-KzZiKy0DWYsnwMF+X1DvQngQ2/FxF7MF3Ff72XcpuPs=" crossorigin="anonymous"></script>
}