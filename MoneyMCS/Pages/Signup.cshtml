@page
@model MoneyMCS.Pages.SignupModel
@{
    Layout = "_Layout";
    ViewData["pageName"] = "Signup";
    ViewData["Title"] = "Create an account";
}

<div class="flex items-center min-h-screen p-6 bg-gray-50 dark:bg-gray-900">
    <div class="flex-1 h-full max-w-4xl mx-auto overflow-hidden bg-white rounded-lg shadow-xl dark:bg-gray-800">
        <div class="flex flex-col overflow-y-auto md:flex-row">
            <div class="h-32 md:h-auto md:w-1/2">
                <img aria-hidden="true" class="object-contain w-full h-full dark:hidden" src="~/img/logolarge.png"
                     alt="Office" />
                <img aria-hidden="true" class="hidden object-cover w-full h-full dark:block"
                     src="../assets/img/create-account-office-dark.jpeg" alt="Office" />
            </div>
            <div class="flex items-center justify-center p-6 sm:p-12 md:w-1/2">
                <form id="registerForm" class="w-full" method="post">
                    <div class="text-red-500" asp-validation-summary="All"></div>
                    <h1 class="mb-4 text-xl font-semibold text-gray-700 dark:text-gray-200">
                        Referral Agent Registration
                    </h1>
                    <input asp-for="Input.ReferrerCode" type="hidden" value="@Model.ReferrerCode" />
                    <div class="block text-sm mt-4">
                        <label asp-for="Input.UserName" class="text-gray-700 dark:text-gray-400"></label>
                        <input asp-for="Input.UserName" class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                                />
                    </div>
                    <div class="block mt-4 text-sm">
                        <label asp-for="Input.Email" class="text-gray-700 dark:text-gray-400"></label>
                        <input asp-for="Input.Email" class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                               />
                    </div>
                    <div class="block text-sm mt-4">
                        <label asp-for="Input.FirstName" class="text-gray-700 dark:text-gray-400"></label>
                        <input asp-for="Input.FirstName" class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                                />
                    </div>
                    <div class="block text-sm mt-4">
                        <label asp-for="Input.LastName" class="text-gray-700 dark:text-gray-400"></label>
                        <input asp-for="Input.LastName" class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                                />
                    </div>
                    <div class="block mt-4 text-sm">
                        <label asp-for="Input.Password" class="text-gray-700 dark:text-gray-400"></label>
                        <input asp-for="Input.Password" class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                               type="password" />
                    </div>
                    <div class="block mt-4 text-sm">
                        <label asp-for="Input.ConfirmPassword" class="text-gray-700 dark:text-gray-400">
                        </label>
                        <input asp-for="Input.ConfirmPassword" class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                               type="password" />
                    </div>

                    <div class="flex mt-6 text-sm">
                        <label class="flex items-center dark:text-gray-400">
                            <input type="checkbox"
                                   class="text-purple-600 form-checkbox focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:focus:shadow-outline-gray" />
                            <span class="ml-2">
                                I agree to the
                                <span class="underline">privacy policy</span>
                            </span>
                        </label>
                    </div>

                    <button id="registerSubmit" type="submit" class="block w-full px-4 py-2 mt-4 text-sm font-medium leading-5 text-center text-white transition-colors duration-150 bg-green-600 border border-transparent rounded-lg active:bg-purple-600 hover:bg-green-700 focus:outline-none focus:shadow-outline-purple"
                            href="./login.html">
                        Create account
                    </button>

                    <hr class="my-8" />

                    <p class="mt-4">
                        <a asp-page="/Login" class="text-sm font-medium text-green-600  hover:underline">
                            Already have an account? Login
                        </a>
                    </p>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}