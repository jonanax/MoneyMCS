<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/style.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://unpkg.com/treeflex/dist/css/treeflex.css">
    <script defer src="https://unpkg.com/alpinejs@3.10.2/dist/cdn.min.js"></script>
    <style>
        @@import url('https://fonts.googleapis.com/css?family=Karla:400,700&display=swap');

        .font-family-karla {
            font-family: karla;
        }
        .sticky {
        position: fixed;
        top: 0;
        width: 100%
        }
        .material-symbols-rounded {
            font-variation-settings: 'FILL' 0, 'wght' 600, 'GRAD' 0, 'opsz' 40
        }

        .sidebar::-webkit-scrollbar, .content::-webkit-scrollbar {
            display: none;
        }
        #sideMenu {
            background-color: #4D4D4D;
        }

        #sideMenu a:hover {
            background-color: #D9D9D9;
            color: black;
        }

        .selectedMenu {
            background-color: #D9D9D9 !important;
            color: black;
        }

        .menuItem {
            background-color: #434343;
            margin: 5px 0px 5px 0px;
        }

        .containerHeader {
            background-color: #2D2D2D;
            color: white;
        }

       
        



    </style>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link
	href="https://fonts.googleapis.com/css?family=Material+Icons|Material+Icons+Outlined|Material+Icons+Two+Tone|Material+Icons+Round|Material+Icons+Sharp"
	rel="stylesheet">

</head>
<body class="font-family-karla h-screen">
    <nav class="containerHeader">
        <div class="mx-auto max-w-7xl px-2 sm:px-6 lg:px-8">
            <div class="relative flex h-16 items-center justify-between">
                <div class="absolute inset-y-0 left-0 flex items-center sm:hidden">
                    <!-- Mobile menu button-->
                    <button id="mobile-menu-btn"  type="button" class="inline-flex items-center justify-center rounded-md p-2 text-gray-400 hover:bg-gray-700 hover:text-white focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white" aria-controls="mobile-menu" aria-expanded="false">
                        <span class="sr-only">Open main menu</span>
                        <!--
                          Icon when menu is closed.

                          Heroicon name: outline/bars-3

                          Menu open: "hidden", Menu closed: "block"
                        -->
                        <svg class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
                        </svg>
                        <!--
                          Icon when menu is open.

                          Heroicon name: outline/x-mark

                          Menu open: "block", Menu closed: "hidden"
                        -->
                        <svg class="hidden h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                    </button>
                </div>
                <div class="flex flex-1 items-center justify-center sm:items-stretch sm:justify-start">
                    <div class="flex flex-shrink-0 items-center">
                        <img class="block h-10 w-auto lg:hidden" src="~/img/logo.png" alt="Your Company">
                        <img class="hidden h-10 w-auto lg:block" src="~/img/logo.png" alt="Your Company">
                    </div>
                    <div class="hidden sm:ml-6 sm:block">
                        <div class="flex space-x-4">
                            <!-- Current: "bg-gray-900 text-white", Default: "text-gray-300 hover:bg-gray-700 hover:text-white" -->
                            <a asp-page="ContactUs" class="@(ViewData["pageName"] == "ContactUs" ? "bg-gray-900 text-white": "text-gray-300 hover:bg-gray-700 hover:text-white") text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium">Contact Us</a>
                        </div>
                    </div>
                </div>
                <div class="absolute inset-y-0 right-0 flex items-center pr-2 sm:static sm:inset-auto sm:ml-6 sm:pr-0">
                    <button type="button" class="rounded-full bg-gray-800 p-1 text-gray-400 hover:text-white focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-800">
                        <span class="sr-only">View notifications</span>
                        <!-- Heroicon name: outline/bell -->
                        <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M14.857 17.082a23.848 23.848 0 005.454-1.31A8.967 8.967 0 0118 9.75v-.7V9A6 6 0 006 9v.75a8.967 8.967 0 01-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 01-5.714 0m5.714 0a3 3 0 11-5.714 0" />
                        </svg>
                    </button>

                    <!-- Profile dropdown -->
                    <div class="relative ml-3">
                        <div>
                            <button id="dropdownBtn" type="button" class="flex rounded-full bg-gray-800 text-sm focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-800" id="user-menu-button" aria-expanded="false" aria-haspopup="true">
                                <span class="sr-only">Open user menu</span>
                                <img class="h-8 w-8 rounded-full" src="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80" alt="">
                            </button>
                        </div>

                        <!--
                          Dropdown menu, show/hide based on menu state.

                          Entering: "transition ease-out duration-100"
                            From: "transform opacity-0 scale-95"
                            To: "transform opacity-100 scale-100"
                          Leaving: "transition ease-in duration-75"
                            From: "transform opacity-100 scale-100"
                            To: "transform opacity-0 scale-95"
                        -->
                        <div id="dropdownNavbar" class="hidden absolute right-0 z-10 mt-2 w-48 origin-top-right rounded-md bg-white py-1 shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none" role="menu" aria-orientation="vertical" aria-labelledby="user-menu-button" tabindex="-1">
                            <!-- Active: "bg-gray-100", Not Active: "" -->
                            <span class="block px-4 py-2 text-sm text-gray-700">Hello @User.Claims.FirstOrDefault(c => c.Type == "Username").Value</span>
                            <a asp-page="/Profile" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-200" role="menuitem" tabindex="-1" id="user-menu-item-1">Profile</a>
                            <a asp-page="/Logout" class="block px-4 py-2 text-sm text-gray-700 hover:bg-red-500 hover:text-white" role="menuitem" tabindex="-1" id="user-menu-item-2">Sign out</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Mobile menu -->
        <div class="sm:hidden" id="mobile-menu">
            <div class="space-y-1 px-2 pt-2 pb-3">
                <a asp-page="/Index" class="@(ViewData["pageName"] == "/" ? "bg-gray-900 text-white" : "text-gray-300 hover:bg-gray-700 hover:text-white") block px-3 py-2 rounded-md text-base font-medium" aria-current="page">Home</a>

                <a asp-page="/Resources" class="@(ViewData["pageName"] == "Resources" ? "bg-gray-900 text-white" : "text-gray-300 hover:bg-gray-700 hover:text-white") block px-3 py-2 rounded-md text-base font-medium">Resources</a>

                <a asp-page="/CA/Index" class="@(ViewData["pageName"] == "Commissions and Referrals" ? "bg-gray-900 text-white" : "text-gray-300 hover:bg-gray-700 hover:text-white")e block px-3 py-2 rounded-md text-base font-medium">Commissions and Referrals</a>

                <a asp-page="/ClientDashboard" class="@(ViewData["pageName"] == "ClientDashboard" ? "bg-gray-900 text-white" : "text-gray-300 hover:bg-gray-700 hover:text-white") block px-3 py-2 rounded-md text-base font-medium">Client Dashboard</a>
                <a asp-page="/AddClient" class="@(ViewData["pageName"] == "AddClient" ? "bg-gray-900 text-white" : "text-gray-300 hover:bg-gray-700 hover:text-white") block px-3 py-2 rounded-md text-base font-medium">Add client</a>
                <a asp-page="/Downlines" class="@(ViewData["pageName"] == "Downlines" ? "bg-gray-900 text-white" : "text-gray-300 hover:bg-gray-700 hover:text-white") block px-3 py-2 rounded-md text-base font-medium">Downlines</a>
            </div>
        </div>
    </nav>


    <div class="grid grid-cols-8 md:grid-cols-6 h-screen">
        <div id="sideMenu" class="bg-green-500 flex flex-col p-2">
            <a asp-page="/Index" class="flex flex-col menuItem rounded-full items-center space-x-1 px-2 py-3 text-white @(ViewData["pageName"] == "/" ? "selectedMenu" : "") w-full transition">
                <span class="text-2xl"><i class="fas fa-home"></i></span>
                <span class="hidden md:block">Home</span>
            </a>
            <a asp-page="/Resources" class="flex flex-col menuItem rounded-full items-center space-x-1 px-2 py-3 text-white  @(ViewData["pageName"] == "Resources" ? "selectedMenu" : "")  w-full transition">
                <span class="text-2xl"><i class="fas fa-book"></i></span>
                <span class="hidden md:block text-center">Resource Library</span>
            </a>

            <a asp-page="/CA/Index" class="flex flex-col menuItem rounded-full items-center space-x-1 px-2 py-3 text-white hover:bg-slate-200  @(ViewData["pageName"] == "Commissions and Referrals" ? "selectedMenu": "") w-full transition">
                <span class="text-2xl"><i class="fas fa-handshake"></i></span>
                <span class="hidden md:block text-center">Comissions/Referrals</span>
            </a>

            <a asp-page="/ClientDashboard" class="flex flex-col menuItem rounded-full items-center space-x-1 px-2 py-3 text-white hover:bg-slate-200 @(ViewData["pageName"] == "ClientDashboard" ? "selectedMenu" : "")  w-full transition">
                <span class="text-2xl"><i class="fas fa-users"></i></span>
                <span class="hidden md:block text-center">Client Dashboard</span>
            </a>

            <a asp-page="/AddClient" class="flex flex-col menuItem rounded-full items-center space-x-1 px-2 py-3 text-white hover:bg-slate-200 @(ViewData["pageName"] == "AddClient" ? "selectedMenu" : "")  w-full transition">
                <span class="text-2xl"><i class="fas fa-user-plus"></i></span>
                <span class="hidden md:block text-center">Add clients</span>
            </a>
            <a asp-page="/Downlines" class="flex flex-col menuItem rounded-full items-center space-x-1 px-2 py-3 text-white hover:bg-slate-200 @(ViewData["pageName"] == "Downlines" ? "selectedMenu" : "")  w-full transition">
                <span class="text-2xl"><i class="fas fa-sitemap"></i></span>
                <span class="hidden md:block text-center">Downlines</span>
            </a>
        </div>
        <div class="col-span-7 md:col-span-5" style="background-color: #60ad3d;">
            <!--All contents here-->
            @RenderBody()
            
        </div>
    </div>
    <script src="~/js/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/js/all.min.js" integrity="sha256-KzZiKy0DWYsnwMF+X1DvQngQ2/FxF7MF3Ff72XcpuPs=" crossorigin="anonymous"></script>
    <script>
        $("#dropdownBtn").click(function() {
            $("#dropdownNavbar").toggle();
        })

        $("#mobile-menu-btn").click(function() {
            $("#mobile-menu").toggle();
        }) 
    </script>
    @RenderSection("Scripts", false)
</body>
</html>
