<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/style.css" rel="stylesheet" />
    <style>
        @@import url('https://fonts.googleapis.com/css?family=Karla:400,700&display=swap');
        .font-family-karla { font-family: karla; }
        .bg-sidebar { background: #3d68ff; }
        .cta-btn { color: #3d68ff; }
        .upgrade-btn { background: #1947ee; }
        .upgrade-btn:hover { background: #0038fd; }
        .active-nav-link { background: #1947ee; }
        .nav-item:hover { background: #1947ee; }
        .account-link:hover { background: #3d68ff; }
        .round {width: 200px; height: 170px; border-radius: 100%; background-color: white;} 
    </style>
</head>
    <body class="font-family-karla flex">
        <aside class="relative bg-green-600 h-screen w-64 hidden sm:block shadow-xl">
            <div class="p-6 text-center">
                <div class="round">
                    <img class="object-cover" src="~/img/logo.png" />
                </div>
                <button class="w-full bg-white cta-btn font-semibold py-2 mt-5 rounded-br-lg rounded-bl-lg rounded-tr-lg shadow-lg hover:shadow-xl hover:bg-gray-300 flex items-center justify-center">
                    <i class="fas fa-plus mr-3"></i> Test Button
                </button>
            </div>
            <nav class="text-white text-base font-semibold pt-3">
                <a asp-page="Index" class="flex items-center @(ViewData["pageName"] == "/" ? "bg-green-500" : "") text-white hover:bg-green-500 py-4 pl-6">
                    <i class="fas fa-tachometer-alt mr-3"></i>
                    Dashboard
                </a>
                <a asp-page="Agents" class="flex items-center @(ViewData["pageName"] == "Agents" ? "bg-green-500" : "") text-white hover:bg-green-500 py-4 pl-6"> 
                    <i class="fas fa-table mr-3"></i>
                    Agents
                </a>
                <a asp-page="Accounts" class="flex items-center @(ViewData["pageName"] == "Accounts" ? "bg-green-500" : "") text-white hover:bg-green-500 py-4 pl-6">
                    <i class="fas fa-user-friends mr-3"></i>
                    Accounts
                </a>
                
                <a asp-page="Resources" class="flex items-center @(ViewData["pageName"] == "Resources" ? "bg-green-500" : "") text-white hover:bg-green-500 py-4 pl-6">
                    <i class="fas fa-folder-open mr-3"></i>
                    Resources
                </a>
                
                <a asp-page="Clients" class="flex items-center @(ViewData["pageName"] == "Clients" ? "bg-green-500" : "") text-white hover:bg-green-500 py-4 pl-6">
                    <i class="fas fa-users mr-3"></i>
                    Clients
                </a>
               
               
            </nav>
        </aside>
        <div class="w-full flex flex-col h-screen overflow-y-hidden">
