                    <i class="fas fa-folder-open mr-3"></i>
                    Resources
                </a>
                
                <a asp-page="/Member/Clients/Index" class="flex items-center @(ViewData["pageName"] == "Clients" ? "bg-green-500" : "") text-white hover:bg-green-500 py-4 pl-6">
